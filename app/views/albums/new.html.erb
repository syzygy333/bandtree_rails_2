<h1>Add a release</h1>
  <%= form_for [@release, @band] do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :track_list %>
      <%= f.text_area :track_list %>
    </div>

    <div class="field">
      <%= f.label :year_released %>
      <%= select_year(
        nil, prompt: 'Choose year', start_year: Time.now.year,
        end_year: 1900
      ) %>
    </div>

    <div class="field">
      <%= f.label :record_label %>
      <%= f.text_field :record_label %>
    </div>

    <div class="field">
      <%= f.label :record_label_url %>
      <%= f.url_field :record_label_url %>
    </div>

    <div class="field">
      <%= f.label :catalog_number %>
      <%= f.number_field :catalog_number %>
    </div>

    <div class="field">
      <%= f.label :wiki_link %>
      <%= f.url_field :wiki_link %>
    </div>

    <div class="field">
      <%= f.label :type %>
      <%= f.select :type %>
    </div>

    <div class="field">
      <%= f.label :length %>
      <%= f.select :length %>
    </div>

    <div class="field">
      <%= f.label :private %>
      <%= f.check_box :private? %>
    </div>

    <div class="actions">
      <%= f.submit "Add Release", class: "tiny button radius" %>
    </div>
  <% end %>
