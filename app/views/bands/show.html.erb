<% if @band.band_photo %>
  <%= image_tag(@band.band_photo) %>
<% end %>
<h1><%= @band.name %></h1>
<div class="panel radius">
  <p><strong>Biography:</strong> <%= @band.biography %></p>
  <p><strong>Official Website:</strong> <%= link_to @band.official_link, @band.official_link %></p>
  <p><strong>Wiki:</strong> <%= link_to @band.wiki_link, @band.wiki_link %></p>
</div>
<div class="row">
  <div class="small-4 large-12 columns">
  <%= link_to "Delete Band", band_path(@band), method: :delete,
    class: "tiny button alert right" %>
  <%= link_to "Edit Band", edit_band_path,
    class: "tiny button secondary left" %>
  <%= link_to "Add Release", new_band_release_path(@band),
    class: "tiny button success left" %>
  </div>
</div>
<h1>Releases</h1>
<div class="row">
  <% @releases.each do |release| %>
    <div class="small-2 large-4 columns">
      <div class="panel radius">
        <% if release.release_art %>
          <p><%= image_tag(release.release_art) %></p>
        <% end %>
        <h2><%= release.title %></h2>
        <p><strong>Track List:</strong> <%= release.track_list %></p>
        <p><strong>Year:</strong> <%= release.year_released %></p>
        <p><strong>Record Label:</strong> <%= link_to release.record_label, release.record_label_url %></p>
        <p><strong>Catalog Number:</strong> <%= release.catalog_number %></p>
        <p><strong>Wiki:</strong> <%= link_to release.wiki_link.split("https://en.wikipedia.org/wiki/")[1], release.wiki_link %></p>
        <p><strong>Type:</strong> <%= release.release_type %></p>
        <p><strong>Length:</strong> <%= release.release_length %></p>
      </div>
      <%= link_to "Delete Release", band_release_path(@band.id,
        release.id), method: :delete,
        class: "tiny button alert right" %>
      <%= link_to "Edit Release", edit_band_release_path(@band.id,
        release.id), class: "tiny button secondary left" %>
  </div>
  <% end %>
</div>
