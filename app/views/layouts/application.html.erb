<!DOCTYPE html>
<html>
<head>
  <title>BandtreeRails2</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="fixed">
  <nav class="top-bar" data-topbar role="navigation"
  data-options="is_hover: false">

  <section class="top-bar-section">
      <ul class="left">
        <li class="name has-dropdown">
          <h1><a href="#">Bandtree</a></h1>
          <ul class="dropdown">
            <li><%= link_to 'Bands', bands_path %></li>
            <li><%= link_to 'Releases', releases_path %></li>
            <li><%= link_to 'Artists', artists_path %></li>
            <li><%= link_to 'Home', root_path %></li>
          </ul>
        </li>
        <li class="has-form">
          <div class="row collapse">
            <div class="large-8 small-9 columns">
              <%= form_tag results_path, method: :get do %>
                <%= text_field_tag :query, params[:query] %>
            </div>
            <div class="large-4 small-3 columns">
                <%= submit_tag "Search", name: nil, class: "button expand" %>
              <% end %>
            </div>
          </div>
        </li>
      </ul>

      <ul class="right">
        <% if current_user %>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <% end %>
      </ul>
    </section>
  </nav>
</div>

  <%- flash.each do |key, value| -%>
    <div class="flash <%= key %> alert-box" data-alert>
      <%= value %>
      <a href="#" class="close">&times;</a>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
